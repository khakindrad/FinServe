{
  "Urls": "https://0.0.0.0:5005",
  "AllowedHosts": "*",
  "AllowedOrigins": [ "*" ],

  "AppConfig": {
    "GCLatencyMode": "SustainedLowLatency"
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=finserve.cw36uocce6io.us-east-1.rds.amazonaws.com;port=3306;database=;user=;password="
    //"DefaultConnection": "server=localhost;port=3306;database=finservenew;user=;password="
  },
  "Jwt": {
    "Key": "ReplaceWithVeryStrongKeyOf32OrMoreChars",
    "Issuer": "finserve.local",
    "Audience": "finserve.clients",
    "ExpiryMinutes": 15
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "User": "you@gmail.com",
    "Pass": "yourpassword",
    "From": "no-reply@finserve.com"
  },
  "Security": {
    "PasswordExpiryDays": 90,
    "PasswordHistoryCount": 5,
    "Lockout": {
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 15
    },
    "PasswordExpiryReminderDays": 7,
    "PasswordPolicy": {
      "MinLength": 8,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecial": true,
      "NoWhitespace": true
    }
  },
  "ScheduledJobs": {
    "PasswordExpiryCheckHourUtc": 2
  },
  "Frontend": {
    "BaseUrl": "http://localhost:3000"
  },
  "Admin": {
    "NotificationEmail": "admin@finserve.com"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.AspnetCore.Server.Kestrel": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "Logs/logs.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/FinServeLogs_.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 209715200,
          "retainedFileCountLimit": 200
        }
      }
    ]
  }
}
