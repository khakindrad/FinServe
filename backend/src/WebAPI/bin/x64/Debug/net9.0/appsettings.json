{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=finserve;user=root;password=admin"
  },
  "Jwt": {
    "Key": "ReplaceWithVeryStrongKeyOf32OrMoreChars",
    "Issuer": "finserve.local",
    "Audience": "finserve.clients",
    "ExpiryMinutes": 15
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "User": "you@gmail.com",
    "Pass": "yourpassword",
    "From": "no-reply@finserve.com"
  },
  "Security": {
    "PasswordExpiryDays": 90,
    "PasswordHistoryCount": 5,
    "Lockout": {
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 15
    },
    "PasswordExpiryReminderDays": 7,
    "PasswordPolicy": {
      "MinLength": 8,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecial": true,
      "NoWhitespace": true
    }

  },
  "Admin": {
    "NotificationEmail": "admin@finserve.com"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/finserve-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
